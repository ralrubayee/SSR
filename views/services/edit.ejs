<%- include("../partials/html-head") %>
<%- include("../partials/nav") %>

<section>
  <h1>Edit the Streaming Services! </h1>
  <form action="/services/<%= service._id %>?_method=PUT" method="POST">
    <label>
      Name:
      <input 
        type="text" 
        name="name" 
        value="<%= service.name %>"
        autocomplete="off"
      >
    </label>
    <label>
      Description:
      <input 
      type="text" 
      name="Description" 
      value="<%= service.Description %>"
      autocomplete="off">
    </label>
 
    <label>
      subscription:
      <input 
      type="text" 
      name="sub" 
      value="<%= service.sub %>"
      autocomplete="off">
    </label>
 
    <label>
      link:
      <input 
      type="text" 
      name="link" 
      value="<%= service.link %>"
      autocomplete="off">
    </label>

    <button type="submit">Edit the service</button>
  </form>
</section>

